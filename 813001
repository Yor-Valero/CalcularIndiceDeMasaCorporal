package CalcularIndiceDeMasaCorporal;

import java.util.Scanner;

public class CalcularIndiceDeMasaCorporal {
    public static void main(String[]args) { }
    public static float calcularIndiceDeMasaCorporal(float peso, float altura) {
        return peso / (altura * altura);
    }

     {
        Scanner input = new Scanner(System.in);

        System.out.println("Ingresa tu peso en kilogramos: ");
        float peso = input.nextFloat();

        System.out.println("Ingresa tu altura en metros: ");
        float altura = input.nextFloat();
        
        float imc = calcularIndiceDeMasaCorporal(peso, altura);

        System.out.println("Tu indice de masa corporal (IMC) es: " + imc);
        input.close();
    }
}